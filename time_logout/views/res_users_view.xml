<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="time_view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[2]/group[1]" position="inside">
            		<group string="Session customization">
	            		<field name="context_session_timeout"/>
	            		<field name="context_session_alert_time"/>
	            		<field name="context_not_in_edition"/>
            		</group>
            	</xpath>
            </field>
        </record>
    </data>
</odoo>